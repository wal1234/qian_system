<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!-- 全局参数设置 -->
    <settings>
        <!-- 缓存配置 -->
        <setting name="cacheEnabled" value="true" />
        <setting name="localCacheScope" value="SESSION" />
        
        <!-- 主键生成 -->
        <setting name="useGeneratedKeys" value="true" />
        
        <!-- 执行器配置 -->
        <setting name="defaultExecutorType" value="REUSE" />
        <setting name="defaultStatementTimeout" value="30" />
        <setting name="defaultFetchSize" value="100" />
        
        <!-- 日志实现 -->
        <setting name="logImpl" value="SLF4J" />
        
        <!-- 命名转换 -->
        <setting name="mapUnderscoreToCamelCase" value="true" />
        
        <!-- NULL值处理 -->
        <setting name="callSettersOnNulls" value="true" />
        <setting name="jdbcTypeForNull" value="NULL" />
        
        <!-- 延迟加载 -->
        <setting name="lazyLoadingEnabled" value="true" />
        <setting name="aggressiveLazyLoading" value="false" />
        <setting name="multipleResultSetsEnabled" value="true" />
    </settings>
    
    <!-- 类型处理器 -->
    <typeHandlers>
        <!-- 枚举类型处理 -->
        <typeHandler handler="org.apache.ibatis.type.EnumOrdinalTypeHandler" javaType="java.lang.Enum" />
        <!-- 日期类型处理 -->
        <typeHandler handler="org.apache.ibatis.type.LocalDateTypeHandler" javaType="java.time.LocalDate" />
        <typeHandler handler="org.apache.ibatis.type.LocalTimeTypeHandler" javaType="java.time.LocalTime" />
        <typeHandler handler="org.apache.ibatis.type.LocalDateTimeTypeHandler" javaType="java.time.LocalDateTime" />
        <!-- 大数据类型处理 -->
        <typeHandler handler="org.apache.ibatis.type.BigDecimalTypeHandler" javaType="java.math.BigDecimal" />
        <typeHandler handler="org.apache.ibatis.type.BlobTypeHandler" javaType="java.sql.Blob" />
        <typeHandler handler="org.apache.ibatis.type.ClobTypeHandler" javaType="java.sql.Clob" />
    </typeHandlers>
    
    <!-- 插件配置 -->
    <plugins>
        <!-- 分页插件 -->
        <plugin interceptor="com.github.pagehelper.PageInterceptor">
            <property name="helperDialect" value="mysql" />
            <property name="reasonable" value="true" />
            <property name="supportMethodsArguments" value="true" />
            <property name="params" value="count=countSql" />
        </plugin>
        
        <!-- SQL性能分析插件 -->
        <plugin interceptor="com.qian.system.common.interceptor.SqlCostInterceptor">
            <property name="slowSqlMillis" value="500" />
        </plugin>
    </plugins>
</configuration> 